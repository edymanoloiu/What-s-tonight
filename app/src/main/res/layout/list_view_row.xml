<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/event_name_label"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="Event Name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/event_desc_lab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/event_name_label"
        android:layout_below="@+id/event_name_label"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toStartOf="@+id/joinBut"
        android:text="Description"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:textSize="14dp" />

    <Button
        android:id="@+id/joinBut"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_alignBottom="@+id/event_desc_lab"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/blue_plus"
        android:gravity="center"
        android:focusable="false"/>
</RelativeLayout>