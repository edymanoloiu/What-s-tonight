<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.soft.edi.whatstonight.EventDetails">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit_ev_desc_tb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edit_ev_det_label"
            android:lines="2" />

        <TextView
            android:id="@+id/edit_owner_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Owner:"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/edit_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edit_ev_desc_tb"
            android:layout_marginTop="10dp"
            android:text="Date*:"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <EditText
            android:id="@+id/edit_date_tb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/edit_date_label"
            android:layout_alignBottom="@+id/edit_date_label"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/edit_date_label"
            android:ems="10"
            android:inputType="date" />

        <TextView
            android:id="@+id/edit_time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edit_date_tb"
            android:layout_marginTop="20dp"
            android:text="Time*:"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <EditText
            android:id="@+id/edit_time_tb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/edit_time_label"
            android:layout_alignBottom="@+id/edit_time_label"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/edit_time_label"
            android:ems="10"
            android:inputType="time" />

        <TextView
            android:id="@+id/edit_city_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edit_time_tb"
            android:layout_marginTop="25dp"
            android:text="City*:"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/edit_det_location_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edit_city_label"
            android:layout_marginTop="10dp"
            android:text="Detailed location*:"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_alignParentEnd="true" />

        <EditText
            android:id="@+id/edit_det_loc_tb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edit_det_location_label"
            android:ems="10"
            android:inputType="textPersonName"
            android:lines="2" />

        <TextView
            android:id="@+id/edit_cat_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edit_det_loc_tb"
            android:layout_marginTop="20dp"
            android:text="Category:"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_cat_spinner"
            android:layout_alignBottom="@+id/edit_cat_label"
            android:layout_toEndOf="@+id/edit_cat_label"
            android:layout_marginStart="8dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update event"
            android:id="@+id/edit_up_ev_button"
            android:layout_below="@+id/edit_cat_spinner"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            style="@style/com_facebook_button" />

        <TextView
            android:text="Event Name*:"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/edit_ev_desc_label"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_below="@+id/edit_owner_label"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_below="@+id/edit_ev_desc_label"
            android:id="@+id/edit_ev_name_tb"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/edit_ev_det_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event description*:"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_below="@+id/edit_ev_name_tb"
            android:layout_alignParentStart="true" />

        <Button
            android:text="Delete event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_del_button"
            android:layout_below="@+id/edit_up_ev_button"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            style="@style/com_facebook_button"
            android:layout_marginTop="5dp"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/edit_city_label"
            android:layout_toEndOf="@+id/edit_city_label"
            android:id="@+id/edit_city_spinner" />
    </RelativeLayout>
</ScrollView>
