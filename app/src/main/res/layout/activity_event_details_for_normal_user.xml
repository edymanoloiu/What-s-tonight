<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_event_details_for_normal_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.soft.edi.whatstonight.EventDetailsForNormalUser">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/non_owner_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Owner: "
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/non_evName_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event name:"
            android:layout_below="@+id/non_owner_label"
            android:layout_alignParentStart="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="Event description:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/non_evDesc_label"
            android:layout_below="@+id/non_evName_label"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:minLines="2" />

        <TextView
            android:text="Date:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/non_date_label"
            android:layout_below="@+id/non_evDesc_label"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:text="Time:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/non_time_label"
            android:layout_below="@+id/non_date_label"
            android:layout_alignParentStart="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="City:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/non_city_label"
            android:layout_below="@+id/non_time_label"
            android:layout_alignParentStart="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="Detailed location:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/non_det_loc_label"
            android:layout_below="@+id/non_city_label"
            android:layout_alignParentStart="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:lines="2"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="Category:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/non_cat_label"
            android:layout_below="@+id/non_det_loc_label"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:text="Maximum no of participants:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/non_max_label"
            android:layout_below="@+id/non_cat_label"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:text="No. of participants:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/non_part_label"
            android:layout_below="@+id/non_max_label"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    </RelativeLayout>
</ScrollView>
